.row
  .col-6
    .row
      .col-6
        %h1
          =route
    .row
      .col-6
        %p
          =description
      .col-6
        .btn-grp
          %a{:href=>"/v1/describe/#{route}.json"}
            %button{:class=>'btn btn-small btn-inverse'}
              as JSON
.row
  .col-12
    %h2
      URL
    %h3
      %a{:href=>"/v1/#{route}"}
        \/#{route}
.row
  .col-12
    %h2
      Parameters
    %table{class: "table table-hover table-bordered"}
      %thead
        %tr 
          %th
            Name
          %th
            Data Type
          %th
            Description
      -object_info[:parameters].each do |k,param|
        -next if param.class != Parameter
        %tbody
          %tr
            %td
              =param.name
            %td
              =param.data_type
            %td
              =param.description
    %h2
      Returns 
    %table{class: "table table-hover table-bordered"}
      %th
        Name
      %th
        Type
      -object_info[:properties].each do |prop|
        %tr
          %td
            =prop[:name]
          %td
            =prop[:data_type]
